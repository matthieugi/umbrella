    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5501",
            "webRoot": "${workspaceFolder}/public"
        },
        {
            "name": "Debug Node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run dev"
            ],
            "port": 9229    
        },
        {
            "name": "Azure Function",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        }
    ],
    "compounds": [
        {
            "name": "Edge & Node",
            "configurations": [
                "Launch Edge against localhost",
                "Debug Node"
            ]
        },
        {
            "name": "Edge & Functions",
            "configurations": [
                "Azure Function",
                "Launch Edge against localhost",
            ]
        }
    ]
}